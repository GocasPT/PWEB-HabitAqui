@page "{id?}"
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="p-4 border rounded">
            <h2 class="mb-4">Criar nova conta</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label for="inputPrimeiroNome" class="form-label">Primeiro Nome</label>
                <input asp-for="Input.PrimeiroNome" id="inputPrimeiroNome" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputUltimoNome" class="form-label">Último Nome</label>
                <input asp-for="Input.UltimoNome" id="inputUltimoNome" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UltimoNome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputDataNascimento" class="form-label">Data de Nascimento</label>
                <input asp-for="Input.DataNascimento" id="inputDataNascimento" class="form-control" autocomplete="username" aria-required="true" type="date" />
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Email</label>
                <input asp-for="Input.Email" id="inputEmail" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputPassword" class="form-label">Password</label>
                <input asp-for="Input.Password" id="inputPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="inputConfirmPassword" class="form-label">Confirmar Password</label>
                <input asp-for="Input.ConfirmPassword" id="inputConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.Id))
            {
                <div class="mb-3">
                    <label for="inputSelectedRole" class="form-label">Função</label>
                    <select asp-for="Input.SelectedRole" id="inputSelectedRole" asp-items="@Model.RoleList" class="form-select">
                    </select>
                    <span asp-validation-for="Input.SelectedRole" class="text-danger"></span>
                </div>
            }
            <div class="mb-3">
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary btn-success">REGISTAR</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
