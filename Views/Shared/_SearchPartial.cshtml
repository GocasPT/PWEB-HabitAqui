@model HabitAqui.ViewModels.SearchViewModel

<div>
    <form asp-controller="Habitacoes" asp-action="Search" method="post" class="d-flex" role="search">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="hidden" asp-for="LocadorId" />
        <input type="hidden" asp-for="OrdemPreco" />
        <input type="hidden" asp-for="OrdemRating" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="search" asp-for="TextoAPesquisar" class="form-control me-2">
        <input type="date" asp-for="CheckIn" class="form-control me-2">
        <input type="date" asp-for="CheckOut" class="form-control me-2">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>