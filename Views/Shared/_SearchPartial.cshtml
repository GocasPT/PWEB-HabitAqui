@model HabitAqui.ViewModels.SearchViewModel

<div class="ad-container">
    <div class="row">
        <form asp-controller="Habitacoes" asp-action="Search" method="post" class="d-flex" role="search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="TextoAPesquisar" class="form-control me-2" type="search" placeholder="Search">

            <div class="input-group me-2">
                <span class="input-group-text" id="checkin-addon">Check-In</span>
                <input asp-for="CheckIn" class="form-control" type="date" aria-describedby="checkin-addon" id="checkin-input">
            </div>

            <div class="input-group me-2">
                <span class="input-group-text" id="checkout-addon">Check-Out</span>
                <input asp-for="CheckOut" class="form-control" type="date" aria-describedby="checkout-addon" id="checkout-input">
            </div>

            <button class="btn btn-outline-success" type="submit">Search</button>

            <input asp-for="OrdemPreco" type="hidden" value="" />
            <input asp-for="OrdemRating" type="hidden" value="" />
        </form>
    </div>
</div>

<script>
    // Get current date
    var currentDate = new Date();

    // Set Check-In input value to the current date
    document.getElementById("checkin-input").valueAsDate = currentDate;

    // Calculate Check-Out date (7 days later)
    var checkoutDate = new Date(currentDate);
    checkoutDate.setDate(currentDate.getDate() + 7);

    // Set Check-Out input value to the calculated date
    document.getElementById("checkout-input").valueAsDate = checkoutDate;
</script>


