@model HabitAqui.Models.Aluguer

@{
    ViewData["Title"] = "Pedido de Aluguer";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HabitacaoId" value="@ViewBag.HabitacaoId" />
            <div class="form-group">
                <label asp-for="DataDeEntrada" class="control-label"></label>
                <input asp-for="DataDeEntrada" class="form-control" />
                <span asp-validation-for="DataDeEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeSaida" class="control-label"></label>
                <input asp-for="DataDeSaida" class="form-control" />
                <span asp-validation-for="DataDeSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Pedir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
